<resources>


    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--颜色设置-->
        <item name="colorPrimaryDark">@color/colorPrimary</item><!--colorPrimary 对应ActionBar的颜色-->
        <item name="colorPrimary">@color/colorPrimaryDark</item>  <!--colorPrimaryDark对应状态栏的颜色-->
        <item name="colorAccent">@color/colorAccent</item><!--colorAccent 对应EditText编辑时、RadioButton选中、CheckBox等选中时的颜色-->
    </style>

    <style name="AppTheme.NoActionBar">
        <!--取消其他的导航-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowBackground">@color/pale_grey_two</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
    </style>
    <style name="MyAppTheme" parent="AppTheme.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="dialog_fade_animation" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/fade_in</item>
        <item name="@android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <!--splash页面的-->
    <style name="SplashTheme" parent="MyAppTheme">
        <item name="android:windowBackground">@drawable/splash_bg</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:fitsSystemWindows">false</item>
    </style>

    <style name="view_animation" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/in</item>
        <item name="@android:windowExitAnimation">@anim/out</item>
    </style>

    <!--其他页面的-->
    <style name="MainTheme" parent="MyAppTheme">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>



    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="line_wide_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">16px</item>
        <item name="android:background">@color/silver_two</item>
    </style>

    <style name="line_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/silver_two</item>
    </style>

    <style name="line_vertical_style">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/silver_two</item>
    </style>

    <style name="line_marginleft_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2px</item>
        <item name="android:layout_marginLeft">70px</item>
        <item name="android:background">@color/color_ccdae9</item>
    </style>

    <style name="setting_container_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">98px</item>
        <item name="android:background">@color/white</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">20px</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingRight">12px</item>
    </style>

    <style name="setting_text_dark_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">32px</item>
        <item name="android:textColor">@color/color_4a4a4a</item>
    </style>

    <style name="setting_text_light_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">32px</item>
        <item name="android:textColor">@color/color_b6c8dd</item>
    </style>

    <style name="setting_arrow_style">
        <item name="android:layout_width">28px</item>
        <item name="android:layout_height">28px</item>
        <item name="android:layout_marginLeft">11px</item>
        <item name="android:src">@drawable/icon_arrow_right</item>
    </style>

    <style name="my_text_dark_style" parent="setting_text_dark_style">
        <item name="android:layout_marginLeft">20px</item>
    </style>

    <style name="home_tab_image_style">
        <item name="android:layout_width">46px</item>
        <item name="android:layout_height">46px</item>
        <item name="android:layout_marginTop">16px</item>
    </style>

    <style name="home_tab_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8px</item>
        <item name="android:textSize">20px</item>
        <item name="android:textColor">@color/home_tab_text_color</item>
    </style>

    <style name="ProgressBar_Mini" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">4dp</item>
        <item name="android:minHeight">4dp</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:progressDrawable">@drawable/progressbar_mini</item>
    </style>

</resources>
