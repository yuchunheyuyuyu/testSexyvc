<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/tvCommentTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:background="@drawable/tag_shape_selector"
            android:gravity="center"
            android:lineSpacingExtra="0sp"
            android:paddingBottom="4dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="4dp"
            android:text="本地生活"
            android:textColor="@color/black30"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tvFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="某 CEO 评论了"
            android:textColor="@color/black50"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:text="刘芹@晨兴资本"
            android:textColor="@color/slate"
            android:textSize="12sp" />

    </LinearLayout>

    <com.qtin.sexyvc.ui.widget.ratingbar.RatingBar
        android:id="@+id/ratingScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        app:emptyDrawable="@drawable/star_l_blank"
        app:filledDrawable="@drawable/star_l_full"
        app:isIndicator="true"
        app:minAllowedStars="0"
        app:numStarsValue="5"
        app:ratingValue="3"
        app:starMargin="0dp"
        app:starSizeValue="10dp"
        app:starSpacing="1dp"
        app:stepSizeValue="1" />


    <TextView
        android:id="@+id/tvComentContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="6dp"
        android:ellipsize="end"
        android:lineSpacingExtra="6sp"
        android:singleLine="true"
        android:text="这投资人太逗了！特老实！哈哈"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:lineSpacingExtra="6sp"
        android:text="03-25"
        android:textColor="@color/black30"
        android:textSize="12sp" />


    <View
        style="@style/line_style"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp" />


</LinearLayout>