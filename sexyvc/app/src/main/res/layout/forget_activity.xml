<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pale_grey_two"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28px">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_gravity="left"
            android:paddingLeft="16px"
            android:paddingRight="12px"
            android:src="@drawable/arrow_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:text="@string/find_password"
            android:textColor="@color/slate"
            android:textSize="16sp" />


    </RelativeLayout>


    <EditText
        android:id="@+id/etFirstPassword"
        android:layout_width="match_parent"
        android:layout_height="96px"
        android:layout_marginLeft="32px"
        android:layout_marginTop="70px"
        android:background="@null"
        android:gravity="center_vertical"
        android:hint="@string/hint_input_phone"
        android:inputType="textPassword"
        android:textColor="@color/slate"
        android:textColorHint="@color/slate30"
        android:textSize="14sp" />

    <View
        style="@style/line_style"
        android:layout_marginLeft="32px" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="96px"
        android:layout_marginLeft="32px">

        <EditText
            android:id="@+id/etSecondPassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/hint_input_vertify_code"
            android:inputType="textPassword"
            android:textColor="@color/slate"
            android:textColorHint="@color/slate30"
            android:textSize="14sp" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="32px"
            android:background="@drawable/vertify_code_selector"
            android:gravity="center"
            android:text="@string/get_vertify_code"
            android:textColor="@color/white90"
            android:textSize="12sp" />

    </RelativeLayout>

    <View
        style="@style/line_style"
        android:layout_marginLeft="32px" />


    <TextView
        android:id="@+id/tvNextStep"
        android:layout_width="540px"
        android:layout_height="100px"
        android:layout_marginTop="82px"
        android:background="@drawable/complete_shape_back"
        android:gravity="center"
        android:text="@string/next_step"
        android:textColor="@color/barbie_pink_two"
        android:textSize="16sp" />

</LinearLayout>