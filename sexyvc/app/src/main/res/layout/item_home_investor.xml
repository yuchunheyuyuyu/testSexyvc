<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_marginLeft="12dp"
    android:layout_marginTop="4dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="0dp"
    app:cardElevation="2dp"
    app:contentPaddingLeft="20dp"
    app:contentPaddingRight="20dp"
    app:contentPaddingTop="16dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivLeft"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/hots_title_2_l" />

            <TextView
                android:id="@+id/tvTopTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:gravity="center_horizontal"
                android:text="极速反馈"
                android:textColor="@color/black90"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/ivRight"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/hots_title_2_r" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="72dp"
                android:layout_height="72dp">

                <ImageView
                    android:id="@+id/ivAvatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/avatar_blank" />

                <ImageView
                    android:id="@+id/ivAnthStatus"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="bottom|right"
                    android:layout_marginRight="3dp"
                    android:src="@drawable/logo_approve_vc"
                    android:visibility="visible" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="David Yuan"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvFundName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:text="红杉资本"
                        android:textColor="@color/black50"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvInvestorTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="PARTNER/HEAD OF R…"
                        android:textColor="@color/black50"
                        android:textSize="12sp" />

                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/llInvestorFocus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="3dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/acquire_comment"
                            android:layout_marginBottom="2dp"
                            android:textColor="@color/black90"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvCommentNum"
                            android:layout_width="58dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="3dp"
                            android:background="@drawable/num_of_comment"
                            android:gravity="center"
                            android:paddingBottom="2dp"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="12sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llInvestorFollow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="3dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/acquire_follow"
                            android:layout_marginBottom="2dp"
                            android:textColor="@color/black90"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvFollowNum"
                            android:layout_width="58dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="3dp"
                            android:background="@drawable/num_of_follower"
                            android:gravity="center"
                            android:paddingBottom="2dp"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="12sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llInvestorFeedBack"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="18dp"
                            android:gravity="center_vertical"
                            android:text="@string/feedback_speed"
                            android:textColor="@color/black90"
                            android:textSize="12sp" />

                        <ProgressBar
                            android:id="@+id/pbFeedbackSpeed"
                            style="@style/ProgressBar_Mini_Radius_4"
                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            android:layout_marginLeft="9dp"
                            android:progress="0" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llInvestorScore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <com.qtin.sexyvc.ui.widget.ratingbar.RatingBar
                            android:id="@+id/ratingScore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            app:emptyDrawable="@drawable/star_l_blank"
                            app:filledDrawable="@drawable/star_l_full"
                            app:isIndicator="true"
                            app:minAllowedStars="0"
                            app:numStarsValue="5"
                            app:ratingValue="3"
                            app:starMargin="0dp"
                            app:starSizeValue="16dp"
                            app:starSpacing="2dp"
                            app:stepSizeValue="1" />

                        <TextView
                            android:id="@+id/tvRatingScore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:text="0.0"
                            android:textColor="@color/barbie_pink_two"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>