<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/footContainer"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/llFrag1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivTab1"
                style="@style/home_tab_image_style"
                android:src="@drawable/tab_index_selector" />

            <TextView
                android:id="@+id/tvTab1"
                style="@style/home_tab_text_style"
                android:text="@string/home_tab_home" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llFrag2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivTab2"
                style="@style/home_tab_image_style"
                android:src="@drawable/tab_investor_selector" />

            <TextView
                android:id="@+id/tvTab2"
                style="@style/home_tab_text_style"
                android:text="@string/home_tab_investor" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="41dp"
                android:layout_height="41dp">

                <ImageView
                    android:id="@+id/ivCenter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/tab_comment_bg" />

                <ImageView
                    android:layout_width="27dp"
                    android:layout_gravity="center"
                    android:layout_height="27dp"
                    android:src="@drawable/tab_comment_plus" />

            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llFrag3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivTab3"
                style="@style/home_tab_image_style"
                android:src="@drawable/tab_follow_selector" />

            <TextView
                android:id="@+id/tvTab3"
                style="@style/home_tab_text_style"
                android:text="@string/home_tab_concern" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llFrag4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivTab4"
                style="@style/home_tab_image_style"
                android:src="@drawable/tab_user_selector" />

            <TextView
                android:id="@+id/tvTab4"
                style="@style/home_tab_text_style"
                android:text="@string/home_tab_mine" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/footLine"
        style="@style/line_style"
        android:layout_above="@+id/footContainer" />

    <LinearLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footLine"
        android:orientation="horizontal">

    </LinearLayout>


</RelativeLayout>