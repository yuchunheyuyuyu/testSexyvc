<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pale_grey_two"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="left"
        android:paddingLeft="8dp"
        android:paddingTop="14dp"
        android:src="@drawable/arrow_back" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:lineSpacingExtra="6sp"
        android:text="@string/phone"
        android:textColor="@color/slate90"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:lineSpacingExtra="8sp"
        android:text="123 4567 8910"
        android:textColor="@color/slate90"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/etFirstPassword"
        android:layout_width="290dp"
        android:layout_height="70dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/login_input_focus_selector"
        android:digits="@string/filter_vcode"
        android:gravity="center_vertical"
        android:hint="@string/hint_password_rule"
        android:inputType="textPassword"
        android:maxLength="20"
        android:paddingBottom="4dp"
        android:paddingLeft="30dp"
        android:textColor="@color/slate"
        android:textColorHint="@color/slate30"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/etSecondPassword"
        android:layout_width="290dp"
        android:layout_height="70dp"
        android:background="@drawable/login_input_focus_selector"
        android:digits="@string/filter_vcode"
        android:gravity="center_vertical"
        android:hint="@string/hint_comfirm_password"
        android:inputType="textPassword"
        android:maxLength="20"
        android:paddingBottom="4dp"
        android:paddingLeft="30dp"
        android:textColor="@color/slate"
        android:textColorHint="@color/slate30"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/tvComplete"
        android:layout_width="290dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_signup"
        android:gravity="center"
        android:paddingBottom="4dp"
        android:text="@string/complete"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击完成即同意"
            android:textColor="@color/slate_50"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvServiceProtocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《SexyVC用户服务协议》"
            android:textColor="@color/barbie_pink_two"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>