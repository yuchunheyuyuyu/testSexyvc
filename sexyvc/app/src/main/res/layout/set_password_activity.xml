<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pale_grey_two"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="60px"
        android:layout_height="60px"
        android:layout_gravity="left"
        android:paddingLeft="16px"
        android:paddingTop="28px"
        android:src="@drawable/arrow_back" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76px"
        android:lineSpacingExtra="6sp"
        android:text="@string/phone"
        android:textColor="@color/slate90"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16px"
        android:lineSpacingExtra="8sp"
        android:text="123 4567 8910"
        android:textColor="@color/slate90"
        android:textSize="20sp" />

    <com.jess.arms.widget.autolayout.AutoCardView
        android:layout_width="540px"
        android:layout_height="104px"
        android:layout_margin="@dimen/card_elevation_margin"
        android:layout_marginTop="72px"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="25dp"
        app:cardElevation="2dp"
        app:contentPaddingLeft="60px">

        <EditText
            android:id="@+id/etFirstPassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/hint_password_rule"
            android:inputType="textPassword"
            android:textColor="@color/slate"
            android:textColorHint="@color/slate30"
            android:textSize="14sp" />

    </com.jess.arms.widget.autolayout.AutoCardView>


    <com.jess.arms.widget.autolayout.AutoCardView
        android:layout_width="540px"
        android:layout_height="104px"
        android:layout_margin="@dimen/card_elevation_margin"
        android:layout_marginTop="32px"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="25dp"
        app:cardElevation="2dp"
        app:contentPaddingLeft="60px">

        <EditText
            android:id="@+id/etSecondPassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/hint_comfirm_password"
            android:inputType="textPassword"
            android:textColor="@color/slate"
            android:textColorHint="@color/slate30"
            android:textSize="14sp" />

    </com.jess.arms.widget.autolayout.AutoCardView>


    <TextView
        android:id="@+id/tvComplete"
        android:layout_width="580px"
        android:layout_height="140px"
        android:layout_marginTop="50px"
        android:background="@drawable/btn_signup"
        android:gravity="center"
        android:text="@string/complete"
        android:textColor="@color/white"
        android:textSize="16sp" />

</LinearLayout>