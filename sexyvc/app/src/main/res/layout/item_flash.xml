<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:gravity="center"
        android:lineSpacingExtra="6sp"
        android:text="6月12日"
        android:textColor="@color/slate"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:lineSpacingExtra="6sp"
            android:text="22:50"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <com.qtin.sexyvc.ui.widget.ExpandableTextView
                android:id="@+id/tvContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:lineSpacingExtra="6sp"
                android:text="北京时间今天凌晨 12 点整，本次 E3 最后一个游戏大厂——任天堂的发布会开始了。就像任天堂美国的老总雷吉之前预告的一样，他们播放了一个长 25 分钟事先录好的视频，关注重点，不说废话，只提供关于游戏的重要信息；之后就是在 E3 会场中「Splatoon2」「ARMS」和「宝拳」这三个游戏的淘汰赛时间了。此次发布会中的大部分游戏都将会在 2017 年内发售。"
                android:textColor="@color/black70"
                android:textSize="14sp"
                app:etv_MaxLinesOnShrink="6"
                app:etv_ToShrinkHint="@string/to_shrink_hint"
                app:etv_EllipsisHint="@string/etv_ellipsisHint"
                app:etv_ToExpandHint="@string/to_shrink_hint" />

            <View
                style="@style/line_style"
                android:layout_marginTop="15dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>