<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <com.iarcuschin.simpleratingbar.SimpleRatingBar
        android:id="@+id/ratingBar1"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_margin="8dp"
        app:srb_borderColor="#f00"
        app:srb_fillColor="#f00"
        app:srb_pressedBorderColor="#f00"
        app:srb_pressedFillColor="#f00"
        app:srb_starBackgroundColor="#B7B7B7"
        app:srb_starBorderWidth="0.01"
        app:srb_starCornerRadius="0"
        app:srb_stepSize="0.5" />

    <com.iarcuschin.simpleratingbar.SimpleRatingBar
        android:id="@+id/ratingBar2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="8dp"
        app:srb_borderColor="#f00"
        app:srb_fillColor="#f00"
        app:srb_pressedBorderColor="#f00"
        app:srb_pressedFillColor="#f00"
        app:srb_maxStarSize="40px"
        app:srb_starBackgroundColor="#B7B7B7"
        app:srb_starBorderWidth="0.01"
        app:srb_starCornerRadius="50"
        app:srb_stepSize="0.5" />

    <com.iarcuschin.simpleratingbar.SimpleRatingBar
        android:id="@+id/ratingBar3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="8dp"
        app:srb_borderColor="#f00"
        app:srb_fillColor="#f00"
        app:srb_pressedBorderColor="#f00"
        app:srb_pressedFillColor="#f00"
        app:srb_starBackgroundColor="#B7B7B7"
        app:srb_starBorderWidth="0.01"
        app:srb_starCornerRadius="0"
        app:srb_stepSize="0.5" />

</LinearLayout>