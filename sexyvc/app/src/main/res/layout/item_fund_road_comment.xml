<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="18dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/tvStageTag"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/black50_shape_5"
            android:gravity="center"
            android:lineSpacingExtra="0sp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:text="天使轮"
            android:textColor="@color/black50"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvDomainTag"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/black50_shape_5"
            android:gravity="center"
            android:lineSpacingExtra="0sp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:text="企业服务"
            android:textColor="@color/black50"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="某CEO"
            android:textColor="@color/black70_dusk_color"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/ivIdentityStatus"
            android:layout_width="16dp"
            android:layout_height="14dp"
            android:layout_marginLeft="4dp"
            android:src="@drawable/logo_approve_vc"
            android:visibility="visible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:text="@string/has_comment"
            android:textColor="@color/black70"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="陈悦天"
            android:layout_marginLeft="6dp"
            android:textColor="@color/dusk90"
            android:textSize="14sp" />


        <TextView
            android:layout_width="12dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text=":"
            android:textColor="@color/black50"
            android:textSize="12sp" />

    </LinearLayout>

    <com.qtin.sexyvc.ui.widget.ratingbar.RatingBar
        android:id="@+id/ratingScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12dp"
        app:emptyDrawable="@drawable/star_l_blank"
        app:filledDrawable="@drawable/star_l_full"
        app:isIndicator="true"
        app:minAllowedStars="0"
        app:numStarsValue="5"
        app:ratingValue="3"
        app:starMargin="0dp"
        app:starSizeValue="12dp"
        app:starSpacing="1dp"
        app:stepSizeValue="1" />

    <LinearLayout
        android:id="@+id/praiseContainer"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="6dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/tvSource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:text="来自 SexyVC"
            android:textColor="@color/black50"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:lineSpacingExtra="6sp"
            android:text="16-12-27"
            android:textColor="@color/black30"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvPraiseNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:gravity="end"
            android:lineSpacingExtra="6sp"
            android:text="1"
            android:textColor="@color/black30"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/ivPraise"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/good_selector" />

    </LinearLayout>

    <View
        android:id="@+id/lineBottom"
        style="@style/line_style"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="18dp" />
</LinearLayout>