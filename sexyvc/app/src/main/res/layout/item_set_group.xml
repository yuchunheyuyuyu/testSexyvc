<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/clickContainer"
    android:layout_width="match_parent"
    android:layout_height="96px"
    android:background="@color/white"
    android:paddingLeft="32px">

    <View
        android:id="@+id/viewDot"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_centerVertical="true"
        android:background="@drawable/set_group_dot_shape"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tvAddGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="@string/add_group"
        android:visibility="invisible"
        android:textColor="@color/black50"
        android:textSize="28px" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="24px"
        android:layout_toRightOf="@+id/viewDot"
        android:text="VR 投资人"
        android:textColor="@color/black90_barbie_pink_two_color"
        android:textSize="28px" />

    <TextView
        android:id="@+id/tvMemberNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="32px"
        android:text="36"
        android:textColor="@color/black50"
        android:textSize="28px" />

    <ImageView
        android:id="@+id/ivPlus"
        android:layout_width="32px"
        android:layout_height="32px"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="32px"
        android:src="@drawable/plus"
        android:visibility="gone" />

    <View
        style="@style/line_style"
        android:layout_alignParentBottom="true" />
</RelativeLayout>