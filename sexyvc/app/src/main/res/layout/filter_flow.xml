<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <View
        android:id="@+id/downLine"
        style="@style/line_style"
        android:layout_alignParentBottom="true" />

    <LinearLayout
        android:id="@+id/actionContainer"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_above="@+id/downLine"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvResetFilter"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/reset"
            android:textColor="@color/black90"
            android:textSize="14sp" />

        <View style="@style/line_vertical_style" />

        <TextView
            android:id="@+id/tvComfirmFilter"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/comfirm"
            android:textColor="@color/barbie_pink_two"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:id="@+id/upLine"
        style="@style/line_style"
        android:layout_above="@+id/actionContainer"
        android:layout_marginTop="16dp" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/upLine">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.qtin.sexyvc.ui.widget.tagview.TagFlowLayout
                android:id="@+id/flowLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>


</RelativeLayout>