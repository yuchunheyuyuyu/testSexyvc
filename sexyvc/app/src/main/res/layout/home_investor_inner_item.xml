<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="104dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="0dp"
    app:cardElevation="2dp"
    app:contentPaddingBottom="10dp"
    app:contentPaddingTop="14dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="64dp"
            android:layout_height="64dp">

            <ImageView
                android:id="@+id/ivAvatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/avatar_blank" />

            <ImageView
                android:id="@+id/ivAnthStatus"
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:layout_gravity="bottom|right"
                android:layout_marginRight="3dp"
                android:src="@drawable/logo_approve_vc"
                android:visibility="visible" />
        </FrameLayout>


        <TextView
            android:id="@+id/tvInvestorName"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:text="徐瑞芬"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvFundName"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:gravity="center_horizontal"
            android:text="棕泉资本"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/black50"
            android:textSize="10sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.qtin.sexyvc.ui.widget.ratingbar.RatingBar
                android:id="@+id/ratingScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:emptyDrawable="@drawable/star_l_blank"
                app:filledDrawable="@drawable/star_l_full"
                app:isIndicator="true"
                app:minAllowedStars="0"
                app:numStarsValue="5"
                app:ratingValue="3"
                app:starMargin="0dp"
                app:starSizeValue="12dp"
                app:starSpacing="1dp"
                app:stepSizeValue="1" />

            <TextView
                android:id="@+id/tvRatingScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="0.0"
                android:textColor="@color/barbie_pink_two"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>